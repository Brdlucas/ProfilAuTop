{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="min-h-screen bg-gray-100">
            <div class="min-h-screen flex">
                <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
                    <div class="w-full max-w-md">
                        <div class="bg-white rounded-2xl shadow-xl p-8">
                            <div class="text-center mb-8">
                                <div class="inline-flex items-center justify-center w-16 h-16 bg-sky-100 rounded-full mb-4">
                                    {{ ux_icon('line-md:log-in', { class: 'h-10 w-10'}) }}
                                </div>
                                <h2 class="text-2xl font-bold text-gray-800">
                                    <span>Connectez-vous pour accéder à votre CV optimisé !</span>
                                </h2>
                                <p class="text-gray-600 mt-2">Profil au Top vous aide à maintenir et améliorer votre CV pour maximiser vos chance&</p>
                            </div>

                            <form>
                                <div class="mb-6">
                                    <label for="username" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                    <div class="relative">
                                        <input type="email" class="bg-sky-50 border border-sky-300 text-sky-900 text-sm rounded-lg focus:ring-sky-500 focus:border-sky-500 block w-full p-2.5" placeholder="you@example.com" required>
                                    </div>
                                </div>

                                <div class="mb-6">
                                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Mot de passe</label>
                                    <div class="relative">
                                        <input type="password" class="bg-sky-50 border border-sky-300 text-sky-900 text-sm rounded-lg focus:ring-sky-500 focus:border-sky-500 block w-full p-2.5" placeholder="••••••••" type="password" required>
                                    </div>
                                </div>

                                <button type="submit" class="w-full bg-sky-500 text-white py-3 rounded-lg font-semibold hover:bg-sky-700 focus:ring-4 focus:ring-sky-600 focus:ring-opacity-50 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                                    <span>Connexion</span>
                                </button>

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                                <p class="mt-6 text-center text-gray-600">
                                    <span>Vous n'avez pas encore de compte ?</span>
                                    <a href="{{path('app_register') }}" class="ml-1 text-sky-500 hover:text-sky-700 font-semibold focus:outline-none">
                                        <span>Inscription</span>
                                    </a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Right Side - Image -->
                <div class="hidden lg:block lg:w-1/2 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?auto=format&amp;fit=crop&amp;q=80')">
                    <div class="h-full bg-black bg-opacity-50 flex items-center justify-center">
                        <div class="text-center text-white px-12">
                            <h2 class="text-4xl font-bold mb-6">Your Title</h2>
                            <p class="text-xl">Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis, expedita.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}
    </form>
{% endblock %}
