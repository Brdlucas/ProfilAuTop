{% extends 'base.html.twig' %}

{% block title %}Poi index{% endblock %}

{% block body %}
    <h1>Poi index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poi in pois %}
            <tr>
                <td>{{ poi.id }}</td>
                <td>{{ poi.name }}</td>
                <td>
                    <a href="{{ path('app_poi_show', {'id': poi.id}) }}">show</a>
                    <a href="{{ path('app_poi_edit', {'id': poi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_poi_new') }}">Create new</a>
{% endblock %}
