{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Title</th>
                <th>Introduction</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.ref }}</td>
                <td>{{ cv.title }}</td>
                <td>{{ cv.introduction }}</td>
                <td>{{ cv.dateStart }}</td>
                <td>{{ cv.dateEnd }}</td>
                <td>{{ cv.createdAt ? cv.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cv.updatedAt ? cv.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cv.link }}</td>
                <td>
                    <a href="{{ path('app_cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('app_cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cv_new') }}">Create new</a>
{% endblock %}
