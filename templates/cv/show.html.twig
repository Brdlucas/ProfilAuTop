{% extends 'base.html.twig' %}

{% block title %}Cv{% endblock %}

{% block body %}
    <h1>Cv</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cv.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ cv.ref }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cv.title }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ cv.introduction }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{{ cv.dateStart }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ cv.dateEnd }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ cv.createdAt ? cv.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ cv.updatedAt ? cv.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ cv.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cv_index') }}">back to list</a>

    <a href="{{ path('app_cv_edit', {'id': cv.id}) }}">edit</a>

    {{ include('cv/_delete_form.html.twig') }}
{% endblock %}
