{% extends 'base.html.twig' %}

{% block title %}Mon profil - Réglages {% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-8">

        <div class="w-full max-w-1/2 mx-auto px-4 ">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 min-h-screen">

                <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col items-center justify-around">
                    <div class="w-full flex flex-col items-center gap-10">

                        <header class="flex flex-col items-center text-center">
                            <img class="inline-flex object-cover border-4 border-sky-500 rounded-full shadow-[5px_5px_0_0_rgba(0,0,0,1)] shadow-sky-500/100 bg-indigo-50 text-sky-600 h-24 w-24 !h-48 !w-48" src="" alt="Profile Image">
