{% extends 'base.html.twig' %}

{% block title %}Mon profil - Réglages {% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

                <!-- Profil Section (Colonne 1) -->
                <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col items-center">
                    <div class="w-full flex flex-col items-center">
                        <header class="flex flex-col items-center text-center mt-16">
                            <img class="inline-flex object-cover border-4 border-indigo-600 rounded-full shadow-lg bg-indigo-50 text-indigo-600 h-24 w-24 md:h-48 md:w-48" src="" alt="Profile Image">
                            <h1 class="text-2xl text-gray-800 font-bold mt-4">Nom Prénom</h1>
                            <h2 class="text-base text-gray-600 font-semibold mt-1">Titre</h2>
                        </header>

                        <div class="mt-6 w-full">
                            <p class="pb-2">
                                <a href="#" class="flex items-center text-indigo-600 hover:text-indigo-800">
                                    {{ ux_icon('mdi:pencil', { class: 'h-4 mr-2 text-indigo-600' }) }}
                                    Mes CV
                                </a>
                            </p>
                            <p class="pb-2">
                                <a href="#" class="flex items-center text-indigo-600 hover:text-indigo-800">
                                    {{ ux_icon('mdi:pencil', { class: 'h-4 mr-2 text-indigo-600' }) }}
                                    Mes Offres
                                </a>
                            </p>
                            <p class="pb-2">
                                <a href="#" class="flex items-center text-indigo-600 hover:text-indigo-800">
                                    {{ ux_icon('mdi:pencil', { class: 'h-4 mr-2 text-indigo-600' }) }}
                                    Mes Expériences
                                </a>
                            </p>
                            <p class="pb-2">
                                <a href="#" class="flex items-center text-indigo-600 hover:text-indigo-800">
                                    {{ ux_icon('mdi:pencil', { class: 'h-4 mr-2 text-indigo-600' }) }}
                                    Mes Formations
                                </a>
                            </p>
                        </div>

                        <div class="mt-6 text-gray-600 text-sm">
                            <p class="text-center">Compte créé il y a: <strong>XX mois</strong></p>
                            <p class="text-center">Dernière modification il y a: <strong>XX jours</strong></p>
                        </div>

                        <div class="mt-6 w-full text-center">
                            <button class="text-red-500 hover:text-red-700 font-semibold">Supprimer mon compte</button>
                        </div>
                    </div>
                </div>

                <!-- Section Paramètres (Colonne 2 et 3) -->
                <div class="col-span-2 space-y-8">

                    <!-- Formulaire de Profil -->
                    <div class="bg-white shadow-lg rounded-lg p-6">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">À propos de moi</h2>

                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-700 mb-2">Informations personnelles</h3>
                            <form action="#" method="POST">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <div>
                                        <label for="first_name" class="block text-sm font-medium text-gray-700">Prénom</label>
                                        <input type="text" id="first_name" name="first_name" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Prénom">
                                    </div>
                                    <div>
                                        <label for="last_name" class="block text-sm font-medium text-gray-700">Nom</label>
                                        <input type="text" id="last_name" name="last_name" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Nom">
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                                    <input type="email" id="email" name="email" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Email">
                                </div>
                                <div class="mt-4">
                                    <label for="bio" class="block text-sm font-medium text-gray-700">Bio</label>
                                    <textarea id="bio" name="bio" rows="4" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Décrivez-vous"></textarea>
                                </div>
                                <button type="submit" class="mt-4 w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Enregistrer</button>
                            </form>
                        </div>
                    </div>

                    <!-- Dernière Offre de Postulation -->
                    <div class="bg-white shadow-lg rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Dernière offre postulée</h3>
                        <div class="border p-4 rounded-lg shadow-md">
                            <p class="text-sm text-gray-600">Vous avez postulé pour l'offre de <strong>Développeur Front-End</strong> le 15 janvier 2025.</p>
                        </div>
                    </div>

                    <!-- Section Abonnement -->
                    <div class="bg-white shadow-lg rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Abonnement</h3>
                        <form action="#" method="POST">
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div>
                                    <label for="subscription_type" class="block text-sm font-medium text-gray-700">Type d'abonnement</label>
                                    <select id="subscription_type" name="subscription_type" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                        <option value="free">Gratuit</option>
                                        <option value="premium">Premium</option>
                                        <option value="vip">VIP</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="renewal_date" class="block text-sm font-medium text-gray-700">Prochaine date de renouvellement</label>
                                    <input type="date" id="renewal_date" name="renewal_date" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                </div>
                            </div>
                            <button type="submit" class="mt-4 w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Mettre à jour l'abonnement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
