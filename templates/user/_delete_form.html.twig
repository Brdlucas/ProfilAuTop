<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce compte ?');" class="mt-6 flex flex-row items-center justify-start gap-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="font-bold text-red-600">Supprimer le compte</button>
</form>
