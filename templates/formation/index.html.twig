{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Title</th>
                <th>Organization</th>
                <th>Description</th>
                <th>Postal_code</th>
                <th>City</th>
                <th>Country</th>
                <th>Level</th>
                <th>Is_graduated</th>
                <th>Degree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.ref }}</td>
                <td>{{ formation.dateStart }}</td>
                <td>{{ formation.dateEnd }}</td>
                <td>{{ formation.title }}</td>
                <td>{{ formation.organization }}</td>
                <td>{{ formation.description ? formation.description|join(', ') : '' }}</td>
                <td>{{ formation.postalCode }}</td>
                <td>{{ formation.city }}</td>
                <td>{{ formation.country }}</td>
                <td>{{ formation.level }}</td>
                <td>{{ formation.isGraduated ? 'Yes' : 'No' }}</td>
                <td>{{ formation.degree }}</td>
                <td>
                    <a href="{{ path('app_formation_show', {'id': formation.id}) }}">show</a>
                    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formation_new') }}">Create new</a>
{% endblock %}
